@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container my-5">
    <h2 class="text-center mb-4">Pricing Plans</h2>
    <div class="row text-center">
        <div class="col-md-4">
            <div class="card p-3 shadow-lg">
                <h4>Basic Plan</h4>
                <p>₹500 per slot</p>
                <p>Access to standard equipment</p>
                <button class="btn btn-primary">Select</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 shadow-lg">
                <h4>Premium Plan</h4>
                <p>₹1,000 per slot</p>
                <p>Access to advanced equipment</p>
                <button class="btn btn-primary">Select</button>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-3 shadow-lg">
                <h4>Pro Plan</h4>
                <p>₹1,500 per slot</p>
                <p>Full access & priority booking</p>
                <button class="btn btn-primary">Select</button>
            </div>
        </div>
    </div>
</div>


<div class="container my-5">
    <h2 class="text-center mb-4">Payment Methods</h2>
    <div class="text-center">
        <img src="~/images/Credit.png" alt="Credit/Debit Cards" width="100">
        <img src="~/images/Upi.png" alt="UPI" width="100">
        <img src="~/images/NetBanking.png" alt="Net Banking" width="100">
        <img src="~/images/Wallet.png" alt="Digital Wallets" width="100">
    </div>
</div>