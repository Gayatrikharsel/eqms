@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card {
        height: 100%;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .btn:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

    .stats h3 {
        font-size: 2.5rem;
        font-weight: bold;
    }
</style>
<div class="container-fluid">
    <!-- Home Section with Video -->
    <div id="home" class="container-fluid p-0 position-relative">
        <video autoplay loop muted playsinline style="width: 100%; height: 500px; object-fit: cover;">
            <source src="~/Videos/Lab.mp4" type="video/mp4">
        </video>
        <div style="position: absolute; top: 10%; left: 50%; transform: translateX(-50%); text-align: center; color: white;">
            <h1 style="font-size: 3rem; font-weight: bold; text-shadow: 2px 2px 5px rgba(0,0,0,0.5);">Equipment Management System!</h1>
            <br />
            <h4 style="font-size: 1.5rem; font-style: italic; text-shadow: 1px 1px 3px rgba(0,0,0,0.3);">Science Without Limits – Book, Pay, Experiment.</h4>
            <br />
            <a class="btn">
                @Html.ActionLink("Book a Slot", "SlotBooking", "Home", null, new { @class = "btn btn-primary btn-lg m-2" })
            </a>
            <a class="btn">
                @Html.ActionLink("View Equipment", "EquipmentList", "Home", null, new { @class = "btn btn-primary btn-lg m-2" })
            </a>
        </div>
    </div>

    <!-- Impact Section -->
    <div class="container my-5 py-3 text-center stats">
        <h2 class="fw-bold">Our Impact</h2>
        <div class="row">
            <div class="col-md-4">
                <h3 class="text-primary">500+</h3>
                <p>Equipment Available</p>
            </div>
            <div class="col-md-4">
                <h3 class="text-success">10,000+</h3>
                <p>Successful Bookings</p>
            </div>
            <div class="col-md-4">
                <h3 class="text-warning">5,000+</h3>
                <p>Happy Users</p>
            </div>
        </div>
    </div>
    <!-- Gallery Section -->
    <div class="container my-5 py-5">
        <h2 class="text-center mb-4 fw-bold text-dark">Experiment Gallery</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-lg overflow-hidden">
                    <img src="~/images/Gallery1.jpg" class="img-fluid rounded" alt="Experiment 1">
                    <div class="card-body text-center bg-light">
                        <h5 class="fw-bold">Microscopy Analysis</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-lg overflow-hidden">
                    <img src="~/images/Gallery2.jpg" class="img-fluid rounded" alt="Experiment 2">
                    <div class="card-body text-center bg-light">
                        <h5 class="fw-bold">Chemical Reactions</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-lg overflow-hidden">
                    <img src="~/images/Gallery3.jpg" class="img-fluid rounded" alt="Experiment 3">
                    <div class="card-body text-center bg-light">
                        <h5 class="fw-bold">Physics Simulation</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Key Features Section - Modernized -->
    <div class="container my-5 py-5 bg-light rounded shadow">
        <h2 class="text-center mb-4 text-dark fw-bold">Key Features</h2>
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="feature-card p-4 shadow-sm rounded bg-white">
                    <i class="fas fa-calendar-check fa-3x mb-3 text-primary"></i>
                    <h5>Easy Slot Booking</h5>
                    <p>Reserve lab equipment with a simple and fast process.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-4 shadow-sm rounded bg-white">
                    <i class="fas fa-clock fa-3x mb-3 text-success"></i>
                    <h5>Real-Time Availability</h5>
                    <p>Check equipment availability instantly.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card p-4 shadow-sm rounded bg-white">
                    <i class="fas fa-lock fa-3x mb-3 text-danger"></i>
                    <h5>Secure Payment</h5>
                    <p>Multiple payment methods for seamless transactions.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works - Revamped -->
    <div class="container my-5 py-5">
        <h2 class="text-center mb-4 text-dark fw-bold">How It Works</h2>
        <div class="row text-center g-4">
            <div class="col-md-3">
                <div class="step-card p-4 shadow-lg rounded bg-white">
                    <i class="fas fa-user-plus fa-3x mb-3 text-primary"></i>
                    <h5>Sign Up/Login</h5>
                    <p>Create an account to access booking features.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card p-4 shadow-lg rounded bg-white">
                    <i class="fas fa-search fa-3x mb-3 text-success"></i>
                    <h5>Browse Equipment</h5>
                    <p>View and select the required instruments.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card p-4 shadow-lg rounded bg-white">
                    <i class="fas fa-calendar-alt fa-3x mb-3 text-warning"></i>
                    <h5>Book a Slot</h5>
                    <p>Choose your preferred date and time.</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="step-card p-4 shadow-lg rounded bg-white">
                    <i class="fas fa-envelope fa-3x mb-3 text-danger"></i>
                    <h5>Get Confirmation</h5>
                    <p>Receive instant email/SMS confirmation.</p>
                </div>
            </div>
        </div>
    </div>


    <!-- Featured Equipment Section -->
    <div class="container my-5">
        <h2 class="text-center mb-4">Featured Equipment</h2>
        <div id="equipmentCarousel" class="carousel slide" data-bs-ride="carousel">
