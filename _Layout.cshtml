<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EMS</title> 
    <link rel="icon" type="image/x-icon" href="~/images/Logo1.jpg">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EMS.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="~/images/Logo1.jpg" alt="EMS Logo" width="40" height="40" class="d-inline-block align-text-top rounded-circle">
                    Equipment Management System
                </a>               
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        
                        <li class="nav-item">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Slot Booking", "SlotBooking", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Equipment List ", "EquipmentList", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Payment & Pricing ", "PaymentPricing", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Contact Us", "ContactUs", "Home", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Home", null, new { @class = "nav-link" })
                        </li> 
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- Footer Section -->
    <footer class="bg-dark text-white text-center py-4">
        <div class="container-fluid">
            <div class="row">
                <!-- Quick Links Section -->
                <div class="col-md-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li class="footer-item">
                            @Html.ActionLink("Home", "Index", "Home", null, new { @class = "footer-link" })
                        </li>
                        <li class="footer-item">
                            @Html.ActionLink("About", "About", "Home", null, new { @class = "footer-link" })
                        </li>
                        <li class="footer-item">
                            @Html.ActionLink("FAQ", "faq", "Home", null, new { @class = "footer-link" })
                        </li>
                        <li class="footer-item">
                            @Html.ActionLink("Terms & Conditions", "TermsConditions", "Home", null, new { @class = "footer-link" })
                        </li>
                        <li class="footer-item">
                            @Html.ActionLink("Privacy Policy", "PrivacyPolicy", "Home", null, new { @class = "footer-link" })
                        </li>
                    </ul>
                </div>

                <!-- Follow Us Section -->
                <div class="col-md-3">
                    <h5>Follow Us</h5>
                    <a href="" class="text-white me-2"><i class="fab fa-facebook fa-2x"></i></a>
                    <a href="https://x.com/ChinuPa58852991" class="text-white me-2"><i class="fab fa-twitter fa-2x"></i></a>
                    <a href="https://www.instagram.com/chinu_.patel_/?next=%2F&hl=en" class="text-white me-2"><i class="fab fa-instagram fa-2x"></i></a>
                    <a href="https://www.linkedin.com/in/abinash-patel-2a839a31a/" class="text-white"><i class="fab fa-linkedin fa-2x"></i></a>
                </div>

                <!-- Payment Methods Section -->
                <div class="col-md-3">
                    <h5>Payment Methods</h5>
                    <p><i class="fas fa-credit-card"></i> Credit/Debit Cards</p>
                    <p><i class="fas fa-university"></i> Net Banking</p>
                    <p><i class="fas fa-mobile-alt"></i> UPI (Google Pay, PhonePe, Paytm)</p>
                    <p><i class="fas fa-wallet"></i> Wallets (Amazon Pay, Paytm Wallet)</p>
                </div>

                <!-- Contact Us Section -->
                <div class="col-md-3">
                    <h5>Contact Us</h5>
                    <p><i class="fas fa-map-marker-alt"></i> 123 Science Lab, University Campus</p>
                    <p><i class="fas fa-envelope"></i> abhinashp56@gmail.com</p>
                    <p><i class="fas fa-phone"></i> +91 8249297928</p>
                </div>
            </div>

            <!-- Copyright Section -->
            <div class="row mt-3">
                <div class="col-12">
                    <p>&copy; 2025 Equipment Management System. All Rights Reserved.<br>Website developed by: Abinash Patel</p>
                </div>
            </div>
        </div>
    </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
